<p id="notice"><%= notice %></p>

<h1>Projects</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Intfield1</th>
      <th>Intfield2</th>
      <th>Date1</th>
      <th>Date2</th>
      <th>Date3</th>
      <th colspan="3"></th>
      <th>RezultDate</th>
      <th>RezultInteger</th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.title %></td>
        <td><%= project.description %></td>
        <td><%= project.intfield1 %></td>
        <td><%= project.intfield2 %></td>
        <td><%= project.date1 %></td>
        <td><%= project.date2 %></td>
        <td><%= project.date3 %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>

        <% if project.result_date %>
          <% if project.result_date > 300 %>
          <td><div style="color:#ff0000"><%= project.result_date %></div></td>
          <% else %>
          <td><%= project.result_date %></td>
          <% end %>
        <% end %>

        <% if project.result_integer %>
          <% if project.result_integer > 20 %>
             <td><div style="color:#ff0000"><%= project.result_integer %></div></td>
          <% else %>
             <td><%= project.result_integer %></td>
          <% end %>
        <% end %>


        

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_project_path %>
 <%= form_tag(button_count_results_main_index_path, method: "post") do %>

    <div class="col-md-3">
      <%= submit_tag("Get result", class: 'btn btn-primary') %>
    </div>
  </div>
<% end %>
